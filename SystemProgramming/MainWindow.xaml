<Window x:Class="SystemProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">

    <StackPanel>
        <Label Margin="20" FontSize="32" FontWeight="Light"
               HorizontalContentAlignment="Center">Системное программирование</Label>
        <Button Height="80" Margin="20 5" FontSize="26" Background="LightSeaGreen" Foreground="White"
            x:Name="ThreadingButton" Click="ThreadingButton_Click">Многопоточность</Button>
        <Button Height="80" Margin="20 5" FontSize="26" Background="LightSeaGreen" Foreground="White"
            x:Name="MultiThreadingButton" Click="MultiThreadingButton_Click">Синхронизация</Button>
        <Button Height="80" Margin="20 5" FontSize="26" Background="LightSeaGreen" Foreground="White"
            x:Name="TaskButton" Click="TaskButton_Click">Многозадачность</Button>
        <Button Height="80" Margin="20 5" FontSize="26" Background="LightSeaGreen" Foreground="White"
            x:Name="SynchroButton" Click="SynchroButton_Click">Объектыы синхронизации</Button>
    </StackPanel>
    
</Window>
